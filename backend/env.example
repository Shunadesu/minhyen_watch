# Server Configuration
PORT=1011
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/zuna-watch
# Hoặc MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/zuna-watch

# JWT
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRE=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Scraping Configuration
SCRAPE_BASE_URL=https://giabaoluxury.com
SCRAPE_DELAY=2000
SCRAPE_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# CORS - Frontend URLs
FRONTEND_URL=http://localhost:3000
